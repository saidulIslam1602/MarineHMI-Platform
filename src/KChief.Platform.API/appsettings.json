{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=KChiefMarineAutomationPlatform.db"
  },
  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=your-instrumentation-key-here"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning",
        "KChief": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/kchief-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/kchief-structured-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "shared": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithCorrelationId"
    ],
    "Properties": {
      "Application": "K-Chief Marine Automation Platform",
      "Version": "1.0.0"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "HealthChecks": {
    "EvaluationTimeInSeconds": 30,
    "MaximumHistoryEntriesPerEndpoint": 50
  },
  "Monitoring": {
    "EnablePerformanceCounters": true,
    "MetricsCollectionIntervalSeconds": 30,
    "SlowRequestThresholdSeconds": 1.0
  },
  "AllowedHosts": "*",
  "Resilience": {
    "RetryPolicies": {
      "VesselControl": {
        "RetryCount": 3,
        "BaseDelayMs": 1000,
        "MaxDelayMs": 10000,
        "UseExponentialBackoff": true
      },
      "OpcUa": {
        "RetryCount": 3,
        "BaseDelayMs": 2000,
        "MaxDelayMs": 15000,
        "UseExponentialBackoff": true
      },
      "Modbus": {
        "RetryCount": 3,
        "BaseDelayMs": 1500,
        "MaxDelayMs": 20000,
        "UseExponentialBackoff": true
      },
      "Database": {
        "RetryCount": 3,
        "BaseDelayMs": 100,
        "MaxDelayMs": 5000,
        "UseExponentialBackoff": true
      },
      "MessageBus": {
        "RetryCount": 5,
        "BaseDelayMs": 500,
        "MaxDelayMs": 30000,
        "UseExponentialBackoff": true
      }
    },
    "CircuitBreaker": {
      "VesselControl": {
        "FailureThreshold": 5,
        "BreakDurationSeconds": 30,
        "MinimumThroughput": 10
      },
      "OpcUa": {
        "FailureThreshold": 5,
        "BreakDurationSeconds": 30,
        "MinimumThroughput": 8
      },
      "Modbus": {
        "FailureThreshold": 4,
        "BreakDurationSeconds": 45,
        "MinimumThroughput": 6
      },
      "MessageBus": {
        "FailureThreshold": 8,
        "BreakDurationSeconds": 60,
        "MinimumThroughput": 12
      },
      "ExternalApi": {
        "FailureThreshold": 5,
        "BreakDurationSeconds": 60,
        "MinimumThroughput": 10
      }
    },
    "Timeout": {
      "VesselControl": 10,
      "OpcUa": 15,
      "Modbus": 20,
      "Database": 5,
      "MessageBus": 25,
      "ExternalApi": 30,
      "AlarmSystem": 5
    },
    "Bulkhead": {
      "VesselControl": {
        "MaxParallelization": 5,
        "MaxQueueing": 10
      },
      "OpcUa": {
        "MaxParallelization": 8,
        "MaxQueueing": 15
      },
      "Modbus": {
        "MaxParallelization": 6,
        "MaxQueueing": 12
      },
      "MessageBus": {
        "MaxParallelization": 12,
        "MaxQueueing": 25
      },
      "ExternalApi": {
        "MaxParallelization": 10,
        "MaxQueueing": 20
      },
      "AlarmSystem": {
        "MaxParallelization": 15,
        "MaxQueueing": 30
      }
    },
    "HttpClient": {
      "DefaultTimeoutSeconds": 30,
      "MaxRetries": 3,
      "BaseDelayMs": 1000
    }
  },
  "Authentication": {
    "JWT": {
      "Secret": "your-super-secret-jwt-signing-key-that-is-at-least-256-bits-long-for-security",
      "Issuer": "KChief.Platform.API",
      "Audience": "KChief.Platform.API",
      "ExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7
    },
    "ApiKey": {
      "DefaultRateLimitPerMinute": 1000,
      "MaxKeyLength": 128,
      "RequireHttps": false
    },
    "OAuth": {
      "Google": {
        "ClientId": "",
        "ClientSecret": ""
      },
      "Microsoft": {
        "ClientId": "",
        "ClientSecret": "",
        "TenantId": ""
      }
    },
    "Security": {
      "RequireHttpsMetadata": false,
      "MaxFailedLoginAttempts": 5,
      "AccountLockoutMinutes": 30,
      "PasswordRequirements": {
        "MinLength": 8,
        "RequireDigit": true,
        "RequireLowercase": true,
        "RequireUppercase": true,
        "RequireNonAlphanumeric": true
      }
    }
  },
  "Caching": {
    "DefaultExpiration": "00:05:00",
    "FrequentDataExpiration": "00:15:00",
    "RareDataExpiration": "01:00:00",
    "RealTimeDataExpiration": "00:00:30",
    "InMemoryCacheSizeLimit": 1000,
    "UseDistributedCache": false,
    "RedisConnectionString": "",
    "KeyPrefix": "kchief:",
    "EntityExpirations": {
      "Vessel": "00:05:00",
      "Engine": "00:00:30",
      "Sensor": "00:00:30",
      "Alarm": "00:01:00"
    }
  }
}
