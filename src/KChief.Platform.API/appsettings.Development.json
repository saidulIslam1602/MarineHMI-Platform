{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=KChiefMarineAutomationPlatform_Dev.db"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Information",
        "KChief": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dev/kchief-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "shared": true
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "Monitoring": {
    "EnablePerformanceCounters": true,
    "MetricsCollectionIntervalSeconds": 10,
    "SlowRequestThresholdSeconds": 0.5
  },
  "Resilience": {
    "RetryPolicies": {
      "VesselControl": {
        "RetryCount": 2,
        "BaseDelayMs": 500,
        "MaxDelayMs": 5000
      },
      "Database": {
        "RetryCount": 2,
        "BaseDelayMs": 50,
        "MaxDelayMs": 2000
      }
    },
    "CircuitBreaker": {
      "VesselControl": {
        "FailureThreshold": 3,
        "BreakDurationSeconds": 15
      },
      "OpcUa": {
        "FailureThreshold": 3,
        "BreakDurationSeconds": 15
      }
    },
    "Timeout": {
      "VesselControl": 30,
      "OpcUa": 30,
      "Modbus": 30,
      "Database": 10
    }
  },
  "Authentication": {
    "JWT": {
      "Secret": "development-jwt-secret-key-for-testing-only-not-for-production-use",
      "ExpirationMinutes": 120
    },
    "Security": {
      "RequireHttpsMetadata": false,
      "MaxFailedLoginAttempts": 10,
      "AccountLockoutMinutes": 5,
      "PasswordRequirements": {
        "MinLength": 6,
        "RequireDigit": false,
        "RequireLowercase": false,
        "RequireUppercase": false,
        "RequireNonAlphanumeric": false
      }
    }
  },
  "Caching": {
    "DefaultExpiration": "00:02:00",
    "FrequentDataExpiration": "00:05:00",
    "RareDataExpiration": "00:30:00",
    "RealTimeDataExpiration": "00:00:15",
    "InMemoryCacheSizeLimit": 500,
    "UseDistributedCache": false,
    "RedisConnectionString": "",
    "KeyPrefix": "kchief:dev:",
    "EntityExpirations": {
      "Vessel": "00:02:00",
      "Engine": "00:00:15",
      "Sensor": "00:00:15",
      "Alarm": "00:00:30"
    }
  }
}
