{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/KChiefMarineAutomationPlatform.db"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning",
        "KChief": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/kchief-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/kchief-structured-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "shared": true
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "HealthChecks": {
    "EvaluationTimeInSeconds": 30,
    "MaximumHistoryEntriesPerEndpoint": 50
  },
  "Monitoring": {
    "EnablePerformanceCounters": false,
    "MetricsCollectionIntervalSeconds": 60,
    "SlowRequestThresholdSeconds": 2.0
  },
  "Resilience": {
    "RetryPolicies": {
      "VesselControl": {
        "RetryCount": 5,
        "BaseDelayMs": 2000,
        "MaxDelayMs": 30000
      },
      "OpcUa": {
        "RetryCount": 5,
        "BaseDelayMs": 3000,
        "MaxDelayMs": 45000
      },
      "Modbus": {
        "RetryCount": 5,
        "BaseDelayMs": 2500,
        "MaxDelayMs": 60000
      }
    },
    "CircuitBreaker": {
      "VesselControl": {
        "FailureThreshold": 10,
        "BreakDurationSeconds": 60
      },
      "OpcUa": {
        "FailureThreshold": 8,
        "BreakDurationSeconds": 90
      },
      "Modbus": {
        "FailureThreshold": 6,
        "BreakDurationSeconds": 120
      }
    },
    "Timeout": {
      "VesselControl": 5,
      "OpcUa": 8,
      "Modbus": 10,
      "Database": 3,
      "AlarmSystem": 3
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:8080"
      }
    }
  },
  "Authentication": {
    "JWT": {
      "Secret": "REPLACE_WITH_SECURE_JWT_SECRET_IN_PRODUCTION",
      "ExpirationMinutes": 30
    },
    "ApiKey": {
      "RequireHttps": true
    },
    "Security": {
      "RequireHttpsMetadata": true,
      "MaxFailedLoginAttempts": 3,
      "AccountLockoutMinutes": 60,
      "PasswordRequirements": {
        "MinLength": 12,
        "RequireDigit": true,
        "RequireLowercase": true,
        "RequireUppercase": true,
        "RequireNonAlphanumeric": true
      }
    }
  },
  "Caching": {
    "DefaultExpiration": "00:05:00",
    "FrequentDataExpiration": "00:15:00",
    "RareDataExpiration": "01:00:00",
    "RealTimeDataExpiration": "00:00:30",
    "InMemoryCacheSizeLimit": 2000,
    "UseDistributedCache": true,
    "RedisConnectionString": "${REDIS_CONNECTION_STRING}",
    "KeyPrefix": "kchief:prod:",
    "EntityExpirations": {
      "Vessel": "00:05:00",
      "Engine": "00:00:30",
      "Sensor": "00:00:30",
      "Alarm": "00:01:00"
    }
  }
}
