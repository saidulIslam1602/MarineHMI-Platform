{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/KChiefMarineAutomationPlatform.db"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "KChief.Platform.API.Middleware.PerformanceMonitoringMiddleware": "Information",
      "KChief.Platform.API.HealthChecks": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "HealthChecks": {
    "EvaluationTimeInSeconds": 30,
    "MaximumHistoryEntriesPerEndpoint": 50
  },
  "Monitoring": {
    "EnablePerformanceCounters": false,
    "MetricsCollectionIntervalSeconds": 60,
    "SlowRequestThresholdSeconds": 2.0
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:8080"
      }
    }
  }
}
